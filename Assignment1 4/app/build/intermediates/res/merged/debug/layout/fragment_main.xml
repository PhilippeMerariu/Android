<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a1430284.assignment1.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_EditText"
        android:hint="Title"
        android:singleLine="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/body_EditText"
        android:layout_weight="1"
        android:hint="Body"
        android:textIsSelectable="false"
        android:gravity="top" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reminder"
            android:id="@+id/reminder_Switch"
            android:singleLine="false"
            android:layout_weight="1"
            android:visibility="visible"
            android:enabled="true"
            android:checked="false" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date_EditText"
            android:layout_weight="1"
            android:visibility="gone"
            android:inputType="none"
            android:textIsSelectable="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/time_EditText"
            android:layout_weight="1"
            android:visibility="gone"
            android:inputType="none"
            android:textIsSelectable="true"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_weight="0"
        android:gravity="center_horizontal">

        <com.example.a1430284.assignment1.CircleView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/one_CircleView"
            android:layout_weight="0"
            android:layout_marginRight="20dp" />

        <com.example.a1430284.assignment1.CircleView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/two_CircleView"
            android:layout_marginRight="20dp" />

        <com.example.a1430284.assignment1.CircleView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/three_CircleView"
            android:layout_marginRight="20dp" />

        <com.example.a1430284.assignment1.CircleView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/four_CircleView"
            android:layout_marginRight="20dp" />

        <com.example.a1430284.assignment1.CircleView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/five_CircleView"
            android:layout_marginRight="20dp" />

        <com.example.a1430284.assignment1.CircleView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/six_CircleView"
            android:layout_marginRight="20dp" />

        <com.example.a1430284.assignment1.CircleView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/seven_CircleView"
            android:layout_marginRight="20dp" />

        <com.example.a1430284.assignment1.CircleView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/eight_CircleView"
            android:layout_marginRight="20dp" />
    </LinearLayout>

</LinearLayout>
